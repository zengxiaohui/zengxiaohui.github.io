     <span style="font-size: 12px;color: red; display: none"  id="testpho" >请输入正确格式</span>
  </div>
  <br>
  <div class="form-group form-inline">
    
    <div class="col-sm-10">
    <label>用户邮箱：</label>
      <input type="email" class="form-control" id="email" 
           placeholder="请输入邮箱" value="" name="email" required >
    </div>
  </div>
  <br>

  <div class="form-group form-inline form-group-sm">
    <div class="col-sm-10">
    <lable>用户角色：</lable>
     <select name="userRole" class="" id="selectRoles"  >
      	<option value="admin">管理员</option>
      	<option value="doctor">医生</option>
      	<option value="patient" selected="selected">患者</option>
      	<option value="sales">销售</option>
      	<option value="tester">医学部用户</option>
      </select>
    </div>
  </div>

  <br>
   
 <button type="button" class="btn btn-info" onclick="javascript:void(window.history.back())">返回</button>
 <button  class="btn btn-danger">添加</button>
</form>
    </div>
  </div>
</div>


<script  type="text/javascript" charset="utf-8" async defer>


    function jugPwd(){
      var password=$("#password").val();
      var password1=$("#password1").val();
      if(password!=password1){

        
        $("#pwd").show();
      }else if(password==password1){
        $("#pwd").hide();
        
      }
    }
    //judge phone style
    function isPhone(){
      //var part = 
     var patrn=/^[0-9]{11}$/; 
      var aa = document.getElementById("phone");

      var phone = aa.value;
      var testpho = document.getElementById("testpho");
     

    if (patrn.exec(phone)) {

      testpho.style.display="none";
    }else{
      

      testpho.style.display="block";
       
    }
    
    }

