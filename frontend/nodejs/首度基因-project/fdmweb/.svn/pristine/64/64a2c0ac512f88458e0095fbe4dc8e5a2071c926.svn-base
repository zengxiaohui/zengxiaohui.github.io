.row{
	margin:50px 0;
}
.row img{
	max-width:100%;
}
.row p{
	margin-top: 10px;
	line-height: 1.5;
}

.row .red{
	color:#D62539;
	/*border-right:2px solid #D62539;*/
	text-align: center;
	font-size: 20px;
	width:150px;
	font-weight: bold;
}
.row .red span{
	display: inline-block;
	/*height: 1em;*/
}


.row div{
	/*display: inline-block;*/
	vertical-align: middle;
}
.section .case >h1{
	text-align: center;
	font-size:20px;
}
.animate{
	position: relative;
}
.animate>img{
	display: block;
	margin: 0 auto;
}
.animate span,.animate div{
	position: absolute;
}
.animate span{
	font-size:18px;
	font-weight: 600;
}
.animate span:first-child{
	top:175px;
	left:140px;
}
.animate span:nth-child(2){
	top:45px;
	left:260px;
}
.animate span:nth-child(3){
	top:-40px;
	left:520px;
}
.animate span:nth-child(4){
	top:45px;
	left:780px;
}
.animate span:nth-child(5){
	top:175px;
	left:905px;
}
.animate .boll img{
	width:100%;
	-webkit-keyframes-animation:rotate 10s linear;
	-moz-keyframes-animation:rotate 10s linear;
	-o-keyframes-animation:rotate 10s linear;
	-ms-keyframes-animation:rotate 10s linear;
	animation:rotate 10s linear;
	-webkit-keyframes-animation-iteration-count:infinite;
	-moz-keyframes-animation-iteration-count:infinite;
	-o-keyframes-animation-iteration-count:infinite;
	-ms-keyframes-animation-iteration-count:infinite;
	animation-iteration-count: infinite;
}
.animate .world{
	font-size:20px;
	font-weight: bold;
	text-align: center;
	left:50%;
	width:50%;
	margin-left: -25%;
	margin-top: -75px;
}
.animate .world h3{
	font-weight: bold;
}
@-webkit-keyframes rotate{
	0%{transform:rotate(0deg);}
	25%{transform:rotate(90deg);}
	50%{transform:rotate(180deg);}
	75%{transform:rotate(270deg);}
	100%{transform:rotate(360deg);}
}
@-moz-keyframes rotate{
	0%{transform:rotate(0deg);}
	25%{transform:rotate(90deg);}
	50%{transform:rotate(180deg);}
	75%{transform:rotate(270deg);}
	100%{transform:rotate(360deg);}
}
@-o-keyframes rotate{
	0%{transform:rotate(0deg);}
	25%{transform:rotate(90deg);}
	50%{transform:rotate(180deg);}
	75%{transform:rotate(270deg);}
	100%{transform:rotate(360deg);}
}
@-ms-keyframes rotate{
	0%{transform:rotate(0deg);}
	25%{transform:rotate(90deg);}
	50%{transform:rotate(180deg);}
	75%{transform:rotate(270deg);}
	100%{transform:rotate(360deg);}
}
@keyframes rotate{
	0%{transform:rotate(0deg);}
	25%{transform:rotate(90deg);}
	50%{transform:rotate(180deg);}
	75%{transform:rotate(270deg);}
	100%{transform:rotate(360deg);}
}