div.join {
    padding-top: 22%;
}
.section-1,.section-2{
    margin-bottom: 50px;
}
.section-2 img{
    width:100%;
}
.section-2 .welcome img{
    /*width: 50%;*/
    display: inline-block;
    vertical-align: middle;
}
.section-2 .welcome div{
   
    vertical-align: middle;
    text-align: center;
    font-size: 2.5em;
    /*width: 49%;*/
}
.section-2 .welcome div span{
    color:#E75E68;

}
.section-2 .welcome div>span:first-child{
    color:#D62539;
    font-size: 2em;
    font-weight: 600;
}
.section-1 .row:nth-child(1) div[class^='col-']:nth-child(2) {
    background: #767878;
}

.section-1 .row:nth-child(1) div[class^='col-']:nth-child(3) {
    position: relative;
}

.section-1 .row:nth-child(1) div[class^='col-']:nth-child(3)>div {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
}

.section-1 .row:nth-child(2) div[class^='col-']:nth-child(1) {
    background: #e8354f;
}

.section-1 .row:nth-child(2) div[class^='col-']:nth-child(2) {
    background: #ec7e86;
}

.section-1 .row:nth-child(3) div[class^='col-']:nth-child(1) {
    background: #a9aaaa;
}

.section-1 .row:nth-child(3) div[class^='col-']:nth-child(2) {
    background: #ffffff;
}

div.join {
    position: relative;
}

div.join>div {
    text-align: center;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    cursor: pointer;
}
div.join>div.last{
    cursor: default;
    text-align: left;
}
div.join>div.last>a{
    color:#D62539;
    border-color: #D62539;
}
div.join>div.last>span{
    color:#D62539;
}

div[class^='col-']>div span {
    display: inline-block;
    color: #FEFEFE;
    font-family: 'PingFang Medium';
}



.employee-container {
    position: relative;
}

.employee-container img{
    width:100%;
    /*object-fit: cover;*/
}
.employee-container h4{
  /*  content:attr('data-info');*/
    text-align: center;
    color:#fff;
    background-color: rgba(255,255,255,.5);
    margin: 0;
}

.employee-container>div:nth-child(1) {
    width: 48%;
    background: #e75e68;
}


.employee-container>div:nth-child(2) {
    width: 65%;
    background: #e8354f;
    margin-top: 83px;
}

.employee-container>div:nth-child(3) {
    width: 66.7%;
    margin-top: 48px;
    margin-left: 24px;
    background: #a9aaaa;
    position: relative;
    z-index:-2;
}

.employee-container>div:nth-child(4) {
    width: 48%;
    position: absolute;
    right: 0px;
    top: 20%;
    background: #767878;
    z-index:-1;
}


.employee-container>div:nth-child(5) {
    position: absolute;
    width: 40%;
    top: 55%;
    right: 0%;
    background: #ec7e86;
}

.modal-bg{
    position: relative;
}
.modal-join{
    display: none;
    width:100%;
    height:100%;
    position: fixed;
    padding-top: 25px;
    top:0;
    left:0;
    background-color: rgba(0,0,0,.5);

}
.modal-join>.box{
    background-color: #fff;
    padding: 25px;
    width:90%;
    max-width: 1000px;
    position: absolute;
    top: 50%;
    left:50%;
    z-index: 20;
    transform:translate(-50%,-50%);
    /*margin-left: auto;*/
    /*margin-right: auto;*/
    max-height: 90%;
    overflow:auto;
    
}
.modal-join>.contain{
    background-color: #fff;
    
}

.modal-join .box h1>img{
    max-width:25px;
    float: right;
    cursor:pointer;
    font-weight: 600;
}
.employee{
    margin-bottom: 25px;
    position: relative;
}
.employee img{
    margin: 0;
}

.employee:after{
    /*content:attr(attr-info);*/
    position: absolute;
    width:100%;
    display: block;
    bottom: 0;
    background-color: rgba(0,0,0,.5);
    color:#fff;
    /*text-indent: 2;*/
   
    padding: 5px 10px;
    text-align: left;
}