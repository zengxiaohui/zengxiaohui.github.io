{% extends "./inc/backbase.html" %} {% block style %}


{% endblock %} {% block content %}
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 账号管理</a> <a href="#" class="current">人事管理</a> </div>

    <h1>人事管理</h1>
  </div>
  <div class="container-fluid">
    <hr>
    	<form class="form-horizontal " role="form" action="/backextra/adduser" id="createUser" style="text-align: center;" method="post">
  <div class="form-group">
    
    <div class="col-sm-10 form-inline">
    <label>用户名称：</label>
      <input type="text"  name ="name" class="form-control" id="firstname" value="" 
           placeholder="请输入用户名" required oninvalid="setCustomValidity('请输入用户名！');" oninput="setCustomValidity('');">
    </div>
  </div>
  <br>
  <div class="form-group">
    
    <div class="col-sm-10 form-inline">
    <label>用户密码：</label>
      <input type="password" class="form-control" id="password" 
           placeholder="请输入密码" value="" name="password" >
    </div>
  </div>
  <br>
  <div class="form-group form-inline">
    
    <div class="col-sm-10">
    <label>重输密码：</label>
      <input type="password" class="form-control" id="password1" 
           placeholder="请确认密码" value="">
    </div>
  </div>
  <br>
  <div class="form-group form-inline">
    
    <div class="col-sm-10">
    <label>真实姓名：</label>
      <input type="text" class="form-control" id="phone" 
           placeholder="请输入电话号码" value="" name="realName">
    </div>
  </div>
  <br>
  <div class="form-group form-inline">
    
    <div class="col-sm-10">
    <label>用户电话：</label>
      <input type="text" class="form-control" id="phone" 
           placeholder="请输入电话号码" value="" name="phone">
    </div>
  </div>
  <br>
  <div class="form-group form-inline">
    
    <div class="col-sm-10">
    <label>用户邮箱：</label>
      <input type="email" class="form-control" id="email" 
           placeholder="请输入邮箱" value="" name="email" >
    </div>
  </div>
  <br>

  <div class="form-group form-inline form-group-sm">
    <div class="col-sm-10">
    <lable>用户角色：</lable>
     <select name="userRole" class="" id="selectRoles"  >
      	<option value="admin">管理员</option>
      	<option value="doctor">医生</option>
      	<option value="patient" selected="selected">患者</option>
      	<option value="sales">销售</option>
      	<option value="tester">医学部用户</option>
      </select>
    </div>
  </div>

  <br>
   
 <button type="button" class="btn btn-info" onclick="javascript:void(window.history.back())">返回</button>
 <button  class="btn btn-danger">修改</button>
</form>
    </div>
  </div>
</div>



{% endblock %} {% block script %}




{% endblock %}